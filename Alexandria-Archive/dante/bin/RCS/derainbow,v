head	1.1;
access;
symbols;
locks; strict;
comment	@# @;


1.1
date	98.11.01.16.08.40;	author dante;	state Exp;
branches;
next	;


desc
@Converts Rainbow 8-bit characters into "standard" escapes
@


1.1
log
@Initial revision
@
text
@#! /bin/sh

:	derainbow   input  output
:
:		Converts Rainbow 8-bit characters into "standard" escapes

if
	test $# -ne 2
then
	echo "Usage: derainbow  input  output"
	exit 1
fi
if
	test ! -r $1
then
	echo "$1 does not exist"
	exit 1
fi
if
	test -s $2
then
	echo -n "$2 already exists.  Type y to continue - "
	if
		read REPLY
		test "$REPLY" != "y"
	then
		exit 1
	fi
fi

LIB=$Dante/lib

echo derainbowing $1
# change DOS ^Z into a newline and delete CRs
tr '\032' '\012' < $1 | tr -d '\015' | \
catbsd -v | \
sed -f $LIB/derainbow.sed > $2
@
