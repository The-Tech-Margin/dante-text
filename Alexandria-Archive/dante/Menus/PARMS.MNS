{PARMS}

:COMPARE @SELECTION
     TO "1|10-19"
	:PRINT ~@HEADING_Current Settings for Searching:\n
	(\o211\f2) Near Level [#O4]\n
	(\o212\f2) Adjacency Level [#O5]\n
	(\o213\f2) Expansion Question for Zero Results [#ZE]\n
	(\o214\f2) Automatic Purging of Zero Results [#ZP]\n
	(\o215\f2) Default Operator [#O3]\n
	(\o216\f2) Truncation Limit [#O2]\n\n~
	:GET @SELECTION -
	     ~Enter number of option to change; \o2H\f2 for Help [Done]: ~ -
	     MATCH "11-16|H|h|"
     TO "H|h"
	:SET @H1 ~11-16~
	:SET @SELECTION ~1~
	:MENU ~PARMS_H~
     TO "11"
	:SET @P1 ~near~
     TO "12"
	:SET @P1 ~adjacency~
     TO "11|12"
	:PRINT ~\n~
	:GET @TMP -
	     PROMPT ~Enter new @P1 level (1-99) [No change]: ~ -
	     MATCH "1-99|"
	:COMPARE @TMP
	     TO ""
		:MENU
	:DONE
     TO "11"
	:SEND ~XN,@TMP~
     TO "12"
	:SEND ~XA,@TMP~
     TO "11-12"
	:SHOW BEFORE "*"
	:PARSE #LEFTOVER EXTRACTING @TMP
	:PARSE #LEFTOVER EXTRACTING @TMP
     TO "11"
	:PARSE #LEFTOVER EXTRACTING #O4
     TO "12"
	:PARSE #LEFTOVER EXTRACTING #O5
     TO "11-12"
	:MENU
     TO "13"
	:SET @TMP ~#ZE~
	:COMPARE @TMP
	     TO "Yes"
		:SET #ZE ~No~
	     TO "No"
		:SET #ZE ~Yes~
	:DONE
     TO "14"
	:SET @TMP ~#ZP~
	:COMPARE @TMP
	     TO "Yes"
		:SET #ZP ~No~
	     TO "No"
		:SET #ZP ~Yes~
	:DONE
     TO "13|14"
	:MENU
     TO "15"
	:PRINT ~\n~
	:GET @TMP PROMPT ~Enter a valid operator [No change]: ~
	:PARSE @TMP UPPER
	:COMPARE @TMP
	     TO ""
		:MENU
	:DONE
	:SEND ~XO,@TMP~
	:SHOW BEFORE "*"
	:PARSE #LEFTOVER EXTRACTING @TMP
	:COMPARE @TMP
	     TO "0"
		:PARSE #LEFTOVER EXTRACTING @TMP
		:PARSE #LEFTOVER EXTRACTING #O3
		:SET @TMP ~~
	     TO "*"
		:PRINT ~\nInvalid operator.\n~
		:PAUSE
	:DONE
	:MENU
     TO "16"
	:PRINT ~\n~
	:GET @TMP ~Enter new truncation limit (5-100) [No change]: ~ "5-100|"
	:COMPARE @TMP
	     TO ""
		:MENU
	:DONE
	:SEND ~XT,@TMP~
	:SHOW BEFORE "*"
	:SET #O2 ~@TMP~
	:MENU

     TO "2|20-29"
	:SET @TMP ~No~
	:COMPARE #ZQ
	     TO "*occs*"
		:SET @TMP ~Yes~
	:DONE
