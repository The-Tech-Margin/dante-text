@#! /bin/sh

#	Do a reorganization of the DDP database

#	$Header$

BRSConfig=/usr/lib/brssearch3.0
export BRSConfig
LOG=/dante/doc/load.log

echo "" >> $LOG
echo -n "Reorg started on " >> $LOG
date >> $LOG
exec brsload DANT -reorg inv < /dev/null >> $LOG
@
